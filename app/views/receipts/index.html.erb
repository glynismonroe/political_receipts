 <% @receipts.each do |receipt| %>
      
        <%= link_to image_tag(receipt.image.url(:medium)), receipt %><br/>
        <%= receipt.description %><br/>
        <%= receipt.user.email if receipt.user %><br/>
        
        <% if receipt.user == current_user %>
           <%= link_to 'Edit', edit_receipt_path(receipt) %> |
           <%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %>
         <% end %>
  <% end %>
 
  
  




